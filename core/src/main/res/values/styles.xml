<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Application theme. -->
    <style name="LauncherTheme" parent="android:Theme.Wallpaper.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/LauncherAnimTheme</item>
    </style>

    <style name="LauncherAnimTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityCloseEnterAnimation">@anim/scale_in</item>
        <item name="android:activityCloseExitAnimation">@anim/scale_out</item>
    </style>

    <style name="ProcessInfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="ProcessInfoText.head" parent="ProcessInfoText">
        <item name="android:textColor">#000000</item>
    </style>

</resources>